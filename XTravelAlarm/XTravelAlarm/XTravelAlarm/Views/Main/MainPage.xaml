<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:viewModels="clr-namespace:XTravelAlarm.ViewModels;assembly=XTravelAlarm"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XTravelAlarm.Views.Main.MainPage"
             Title="Budzik"
             >
    <!---->
    <!--    <ContentPage.BindingContext>-->
    <!--        <viewModels:MainPageViewModel />-->
    <!--    </ContentPage.BindingContext>-->

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Zapisz"
                     Order="Primary" />

        <ToolbarItem Text="Ustawienia"
                     Order="Secondary" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" Orientation="Vertical">

            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start">

                <SearchBar Placeholder="Podaj miejsce docelowe, np. Warszawa"
                       PlaceholderColor="Gray"
                       FontSize="18"
                       FontAttributes="Italic"
                       />
            </StackLayout>

            <maps:Map WidthRequest="350" HeightRequest="220"
                      x:Name="MyMap"
                      IsShowingUser="true"
                      MapType="Street" />

            <Label Text="Ustaw odległość od miejsca docelowego"
                   FontSize="18"
                   FontAttributes="Italic"
                   Margin="5"
                   HorizontalTextAlignment="Center" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
                         Padding="5,20,5,20">
                <Image Source="ic_notifications_active.png" />
                <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                        <Label x:Name="DistanceLabel"
                               FontSize="24"
                               HorizontalOptions="Center" />

                        <Label Text="Km"
                               FontAttributes="Bold"
                               FontSize="24"
                               HorizontalOptions="Center" />
                    </StackLayout>


                    <Slider Minimum="0"
                            Maximum="50"
                            ValueChanged="SliderOnValueChanged"
                            x:Name="DistanceSlider" />


                </StackLayout>
            </StackLayout>


        </StackLayout>
    </ScrollView>
</ContentPage>